{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module resolution */
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Types */
    "types": ["node"],

    /* Output helpers */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Node module resolution */
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
